  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/simple-tcp-chat",
      "args": ["-t", "server", "-p", "3000"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "internalConsoleOptions": "openOnSessionStart",
      "MIMode": "lldb",
      "preLaunchTask": "ninja"
    },
    {
      "name": "Client",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/simple-tcp-chat",
      "args": ["-t", "client", "-h", "127.0.0.1", "-p", "3000"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "internalConsoleOptions": "openOnSessionStart",
      "MIMode": "lldb",
      "preLaunchTask": "ninja"
    }
  ]
}
